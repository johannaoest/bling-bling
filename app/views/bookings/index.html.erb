<h1>Your bookings</h1>
<% @bookings.each do |booking| %>
    <p><%= booking.bed.title%> bed booked by <%= booking.user.first_name %> from <%=booking.bed.user.first_name %></p>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Booked bed</th>
      <th>Date</th>
      <th>Duration</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.bed.title %></td>
        <td><%= booking.date %></td>
        <td><%= booking.duration %></td>
        <td><%= booking.bed.user.first_name %></td>
      </tr>
    <% end %>
  </tbody>
</table>